{
    "manifest_version": 2,
    "name": "Borderify",
    "version": "0.0.1",
    "description": "Adds a red border to all webpages matching mozilla.org.",
    "icons": {
        "48": "icons/icon.png"
    },
    "permissions": [
        "alarms",
        "notifications"
    ],
    "background": {
        "persistent": false,
        "scripts": [
            "./background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "app.js"
            ]
        }
    ]
}