{
    "manifest_version": 2,
    "name": "Borderify",
    "version": "0.0.1",
    "description": "Adds a red border to all webpages matching mozilla.org.",
    "icons": {
        "48": "icons/icon.png"
    },
    "permissions": [
        "alarms",
        "notifications",
        "permissions"
    ],
    "background": {
        "persistent": false,
        "scripts": [
            "./background.js"
        ]
    },
    "browser_action": {
        "default_icon": "icons/icon.png",
        "default_title": "Test",
        "default_popup": "app/index.html"
    }
}